@model WebApplication1_Test1.Models.CreateGatePassViewModel

@{
    ViewData["Title"] = "Request Gate Pass";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h3 class="mb-4">Request Gate Pass</h3>

                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <form asp-action="CreateGatePass" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Destination" class="form-label"></label>
                            <input asp-for="Destination" class="form-control" />
                            <span asp-validation-for="Destination" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ExitDate" class="form-label"></label>
                                <input asp-for="ExitDate" type="date" class="form-control" />
                                <span asp-validation-for="ExitDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ExitTime" class="form-label"></label>
                                <input asp-for="ExitTime" type="time" class="form-control" />
                                <span asp-validation-for="ExitTime" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ReturnDate" class="form-label"></label>
                                <input asp-for="ReturnDate" type="date" class="form-control" />
                                <span asp-validation-for="ReturnDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ReturnTime" class="form-label"></label>
                                <input asp-for="ReturnTime" type="time" class="form-control" />
                                <span asp-validation-for="ReturnTime" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Reason" class="form-label"></label>
                            <textarea asp-for="Reason" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Reason" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
                            <button type="submit" class="btn btn-primary">Submit Request</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}