@model WebApplication1_Test1.Models.ActivityReservationModel

@{
    ViewData["Title"] = "Delete Activity Reservation";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-danger text-white">
            <h3><i class="bi bi-exclamation-triangle"></i> DELETE ACTIVITY RESERVATION</h3>
        </div>
        <div class="card-body">
            <div class="alert alert-danger">
                <h5><i class="bi bi-exclamation-circle"></i> Are you sure you want to delete this reservation?</h5>
                <p>This action cannot be undone.</p>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-light">
                    <h5>Reservation Details</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Activity Name:</dt>
                        <dd class="col-sm-8">@Model.ActivityName</dd>

                        <dt class="col-sm-4">Activity Date:</dt>
                        <dd class="col-sm-8">@Model.ActivityDate.ToString("MMMM dd, yyyy")</dd>

                        <dt class="col-sm-4">Time:</dt>
                        <dd class="col-sm-8">@Model.StartTime.ToString(@"hh\:mm") - @Model.EndTime.ToString(@"hh\:mm")</dd>

                        <dt class="col-sm-4">Description:</dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Status == "Pending")
                            {
                                <span class="badge bg-warning">⏳ Pending</span>
                            }
                            else if (Model.Status == "Approved")
                            {
                                <span class="badge bg-success">✅ Approved</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">❌ Rejected</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Request Date:</dt>
                        <dd class="col-sm-8">@Model.RequestDate.ToString("MMMM dd, yyyy")</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.UserEmail</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>