@model List<GatePass>

@{
    ViewData["Title"] = "Admin - Gate Passes";
}

<div class="container mt-4">
    <h2>🚪 Gate Pass Requests</h2>
    <p class="text-muted">Approve, reject, or delete gate pass requests.</p>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Navigation Tabs -->
    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Index", "Admin")">👤 Users</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("LockerReservations", "Admin")">🔐 Lockers</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("ActivityReservations", "Admin")">🎯 Activities</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="@Url.Action("GatePasses", "Admin")">🚪 Gate Passes</a>
        </li>
    </ul>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No gate pass requests found.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>User</th>
                        <th>Destination</th>
                        <th>Exit</th>
                        <th>Return</th>
                        <th>Reason</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pass in Model)
                    {
                        <tr>
                            <td>@pass.UserEmail</td>
                            <td><strong>@pass.Destination</strong></td>
                            <td>
                                @pass.ExitDate.ToString("MMM dd, yyyy")<br />
                                <small class="text-muted">@pass.ExitTime.ToString(@"hh\:mm")</small>
                            </td>
                            <td>
                                @if (pass.ReturnDate.HasValue)
                                {
                                    @pass.ReturnDate.Value.ToString("MMM dd, yyyy")
                                    <br />
                                    <small class="text-muted">@pass.ReturnTime?.ToString(@"hh\:mm")</small>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>@pass.Reason</td>
                            <td>
                                @if (pass.Status == "Pending")
                                {
                                    <span class="badge bg-warning">⏳ Pending</span>
                                }
                                else if (pass.Status == "Approved")
                                {
                                    <span class="badge bg-success">✅ Approved</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">❌ Rejected</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    @if (pass.Status == "Pending")
                                    {
                                        <form asp-action="ApproveGatePass" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@pass.Id" />
                                            <button type="submit" class="btn btn-sm btn-success">✅ Approve</button>
                                        </form>
                                        <form asp-action="RejectGatePass" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@pass.Id" />
                                            <button type="submit" class="btn btn-sm btn-warning">❌ Reject</button>
                                        </form>
                                    }
                                    <form asp-action="DeleteGatePass" method="post" class="d-inline" onsubmit="return confirm('Delete this gate pass?');">
                                        <input type="hidden" name="id" value="@pass.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">🗑️</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>