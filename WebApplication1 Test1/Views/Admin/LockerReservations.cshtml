@model List<LockerReservationModel>

@{
    ViewData["Title"] = "Admin - Locker Reservations";
}

<div class="container mt-4">
    <h2>🔐 Locker Reservations</h2>
    <p class="text-muted">Approve, reject, or delete locker reservation requests.</p>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Navigation Tabs -->
    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Index", "Admin")">👤 Users</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="@Url.Action("LockerReservations", "Admin")">🔐 Lockers</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("ActivityReservations", "Admin")">🎯 Activities</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("GatePasses", "Admin")">🚪 Gate Passes</a>
        </li>
    </ul>

    <!-- Filter Options -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <select class="form-select" id="statusFilter">
                        <option value="">All Status</option>
                        <option value="Pending">⏳ Pending</option>
                        <option value="Approved">✅ Approved</option>
                        <option value="Rejected">❌ Rejected</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <input type="text" class="form-control" id="searchInput" placeholder="Search...">
                </div>
                <div class="col-md-3">
                    <input type="date" class="form-control" id="dateFilter" placeholder="Filter by date">
                </div>
                <div class="col-md-3">
                    <button class="btn btn-outline-secondary w-100" onclick="resetFilters()">Reset Filters</button>
                </div>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No locker reservations found.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover" id="lockerTable">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>User</th>
                        <th>Locker #</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Purpose</th>
                        <th>Status</th>
                        <th>Request Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reservation in Model)
                    {
                        <tr data-status="@reservation.Status" data-search="@($"{reservation.UserEmail} {reservation.LockerNumber} {reservation.Purpose}")">
                            <td>@reservation.Id</td>
                            <td>@reservation.UserEmail</td>
                            <td><strong>@reservation.LockerNumber</strong></td>
                            <td>@reservation.StartDate.ToString("MMM dd, yyyy")</td>
                            <td>@reservation.EndDate.ToString("MMM dd, yyyy")</td>
                            <td>
                                @if (reservation.Purpose.Length > 50)
                                {
                                    <span title="@reservation.Purpose">@reservation.Purpose.Substring(0, 50)...</span>
                                }
                                else
                                {
                                    @reservation.Purpose
                                }
                            </td>
                            <td>
                                @if (reservation.Status == "Pending")
                                {
                                    <span class="badge bg-warning">⏳ Pending</span>
                                }
                                else if (reservation.Status == "Approved")
                                {
                                    <span class="badge bg-success">✅ Approved</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">❌ Rejected</span>
                                }
                            </td>
                            <td>@reservation.RequestDate.ToString("MMM dd, yyyy")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    @if (reservation.Status == "Pending")
                                    {
                                        <form asp-action="ApproveLocker" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@reservation.Id" />
                                            <button type="submit" class="btn btn-sm btn-success" title="Approve">
                                                <i class="fas fa-check"></i> Approve
                                            </button>
                                        </form>
                                        <form asp-action="RejectLocker" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@reservation.Id" />
                                            <button type="submit" class="btn btn-sm btn-warning" title="Reject">
                                                <i class="fas fa-times"></i> Reject
                                            </button>
                                        </form>
                                    }
                                    <button type="button" class="btn btn-sm btn-info" title="View Details"
                                            data-bs-toggle="modal" data-bs-target="#detailsModal"
                                            data-id="@reservation.Id"
                                            data-user="@reservation.UserEmail"
                                            data-locker="@reservation.LockerNumber"
                                            data-start="@reservation.StartDate.ToString("MMM dd, yyyy")"
                                            data-end="@reservation.EndDate.ToString("MMM dd, yyyy")"
                                            data-purpose="@reservation.Purpose"
                                            data-status="@reservation.Status"
                                            data-requestdate="@reservation.RequestDate.ToString("MMM dd, yyyy")">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <form asp-action="DeleteLocker" method="post" class="d-inline"
                                          onsubmit="return confirm('Are you sure you want to delete this reservation? This action cannot be undone.');">
                                        <input type="hidden" name="id" value="@reservation.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <small class="text-muted">Showing @Model.Count reservation(s)</small>
        </div>
    }
</div>

<!-- Details Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Locker Reservation Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <dl class="row">
                    <dt class="col-sm-4">Reservation ID:</dt>
                    <dd class="col-sm-8" id="modalId"></dd>

                    <dt class="col-sm-4">User:</dt>
                    <dd class="col-sm-8" id="modalUser"></dd>

                    <dt class="col-sm-4">Locker Number:</dt>
                    <dd class="col-sm-8" id="modalLocker"></dd>

                    <dt class="col-sm-4">Start Date:</dt>
                    <dd class="col-sm-8" id="modalStart"></dd>

                    <dt class="col-sm-4">End Date:</dt>
                    <dd class="col-sm-8" id="modalEnd"></dd>

                    <dt class="col-sm-4">Purpose:</dt>
                    <dd class="col-sm-8" id="modalPurpose"></dd>

                    <dt class="col-sm-4">Status:</dt>
                    <dd class="col-sm-8" id="modalStatus"></dd>

                    <dt class="col-sm-4">Request Date:</dt>
                    <dd class="col-sm-8" id="modalRequestDate"></dd>
                </dl>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Filter functionality
        document.getElementById('statusFilter').addEventListener('change', filterTable);
        document.getElementById('searchInput').addEventListener('keyup', filterTable);
        document.getElementById('dateFilter').addEventListener('change', filterTable);

        function filterTable() {
            const statusFilter = document.getElementById('statusFilter').value.toLowerCase();
            const searchText = document.getElementById('searchInput').value.toLowerCase();
            const dateFilter = document.getElementById('dateFilter').value;

            const rows = document.querySelectorAll('#lockerTable tbody tr');
            let visibleCount = 0;

            rows.forEach(row => {
                const status = row.getAttribute('data-status').toLowerCase();
                const searchContent = row.getAttribute('data-search').toLowerCase();
                const startDate = row.cells[3].textContent.toLowerCase();
                const endDate = row.cells[4].textContent.toLowerCase();

                let shouldShow = true;

                // Status filter
                if (statusFilter && status !== statusFilter) {
                    shouldShow = false;
                }

                // Search filter
                if (searchText && !searchContent.includes(searchText)) {
                    shouldShow = false;
                }

                // Date filter
                if (dateFilter) {
                    const filterDate = new Date(dateFilter).toLocaleDateString('en-US', {
                        month: 'short',
                        day: '2-digit',
                        year: 'numeric'
                    });
                    if (!startDate.includes(filterDate) && !endDate.includes(filterDate)) {
                        shouldShow = false;
                    }
                }

                if (shouldShow) {
                    row.style.display = '';
                    visibleCount++;
                } else {
                    row.style.display = 'none';
                }
            });

            // Update counter
            const counter = document.querySelector('.text-muted');
            if (counter) {
                counter.textContent = `Showing ${visibleCount} reservation(s)`;
            }
        }

        function resetFilters() {
            document.getElementById('statusFilter').value = '';
            document.getElementById('searchInput').value = '';
            document.getElementById('dateFilter').value = '';
            filterTable();
        }

        // Modal functionality
        const detailsModal = document.getElementById('detailsModal');
        if (detailsModal) {
            detailsModal.addEventListener('show.bs.modal', function(event) {
                const button = event.relatedTarget;

                document.getElementById('modalId').textContent = button.getAttribute('data-id');
                document.getElementById('modalUser').textContent = button.getAttribute('data-user');
                document.getElementById('modalLocker').textContent = button.getAttribute('data-locker');
                document.getElementById('modalStart').textContent = button.getAttribute('data-start');
                document.getElementById('modalEnd').textContent = button.getAttribute('data-end');
                document.getElementById('modalPurpose').textContent = button.getAttribute('data-purpose');
                document.getElementById('modalRequestDate').textContent = button.getAttribute('data-requestdate');

                const status = button.getAttribute('data-status');
                let statusHtml = '';
                if (status === 'Pending') {
                    statusHtml = '<span class="badge bg-warning">⏳ Pending</span>';
                } else if (status === 'Approved') {
                    statusHtml = '<span class="badge bg-success">✅ Approved</span>';
                } else {
                    statusHtml = '<span class="badge bg-danger">❌ Rejected</span>';
                }
                document.getElementById('modalStatus').innerHTML = statusHtml;
            });
        }

        // Initialize filters on page load
        document.addEventListener('DOMContentLoaded', function() {
            filterTable();
        });
    </script>

    <style>
        .table th {
            font-weight: 600;
        }

        .btn-group .btn {
            margin-right: 2px;
        }

            .btn-group .btn:last-child {
                margin-right: 0;
            }

        .badge {
            font-size: 0.85em;
            padding: 0.4em 0.6em;
        }

        tr:hover {
            background-color: #f8f9fa;
        }
    </style>
}