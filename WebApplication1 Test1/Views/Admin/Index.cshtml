@model List<UserManagementViewModel>

@{
    ViewData["Title"] = "Admin - User Management";
}

<div class="container mt-4">
    <h2>👤 User Management</h2>
    <p class="text-muted">Manage all registered users, set time limits, ban users, or delete accounts.</p>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Navigation Tabs -->
    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a class="nav-link active" href="@Url.Action("Index", "Admin")">👤 Users</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("LockerReservations", "Admin")">🔐 Lockers</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("ActivityReservations", "Admin")">🎯 Activities</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("GatePasses", "Admin")">🚪 Gate Passes</a>
        </li>
    </ul>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Lockout Until</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Email</td>
                        <td>
                            @if (user.IsBanned)
                            {
                                <span class="badge bg-danger">Banned</span>
                            }
                            else if (user.IsLockedOut)
                            {
                                <span class="badge bg-warning">Locked Out</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Active</span>
                            }
                        </td>
                        <td>
                            @if (user.LockoutEnd.HasValue)
                            {
                                @user.LockoutEnd.Value.ToString("MMM dd, yyyy hh:mm tt")
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                @if (!user.IsLockedOut)
                                {
                                    <!-- Lockout Options -->
                                    <button type="button" class="btn btn-sm btn-warning dropdown-toggle" data-bs-toggle="dropdown">
                                        ⏱️ Lockout
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <form asp-action="LockoutUser" method="post" class="d-inline">
                                                <input type="hidden" name="userId" value="@user.UserId" />
                                                <input type="hidden" name="hours" value="1" />
                                                <button type="submit" class="dropdown-item">1 Hour</button>
                                            </form>
                                        </li>
                                        <li>
                                            <form asp-action="LockoutUser" method="post" class="d-inline">
                                                <input type="hidden" name="userId" value="@user.UserId" />
                                                <input type="hidden" name="hours" value="24" />
                                                <button type="submit" class="dropdown-item">24 Hours</button>
                                            </form>
                                        </li>
                                        <li>
                                            <form asp-action="LockoutUser" method="post" class="d-inline">
                                                <input type="hidden" name="userId" value="@user.UserId" />
                                                <input type="hidden" name="hours" value="168" />
                                                <button type="submit" class="dropdown-item">1 Week</button>
                                            </form>
                                        </li>
                                    </ul>

                                    <!-- Ban Button -->
                                    <form asp-action="BanUser" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to ban this user permanently?');">
                                        <input type="hidden" name="userId" value="@user.UserId" />
                                        <button type="submit" class="btn btn-sm btn-danger">🚫 Ban</button>
                                    </form>
                                }
                                else
                                {
                                    <!-- Unlock Button -->
                                    <form asp-action="UnlockUser" method="post" class="d-inline">
                                        <input type="hidden" name="userId" value="@user.UserId" />
                                        <button type="submit" class="btn btn-sm btn-success">✅ Unlock</button>
                                    </form>
                                }

                                <!-- Delete Button -->
                                <form asp-action="DeleteUser" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this user? This cannot be undone!');">
                                    <input type="hidden" name="userId" value="@user.UserId" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger">🗑️ Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>