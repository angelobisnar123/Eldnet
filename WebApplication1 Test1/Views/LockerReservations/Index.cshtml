@model IEnumerable<WebApplication1_Test1.Models.LockerReservationModel>

@{
    ViewData["Title"] = "My Locker Reservations";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-lock-fill"></i> My Locker Reservations</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> New Reservation
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox display-1 text-muted mb-3"></i>
                <h4 class="text-muted">No reservations found</h4>
                <p class="text-muted">You haven't made any locker reservations yet.</p>
                <a asp-action="Create" class="btn btn-primary mt-3">
                    <i class="bi bi-plus-circle"></i> Make Your First Reservation
                </a>
            </div>
        </div>
    }
    else
    {
        <!-- Status Filter -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">Reservation Stats</h6>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Total:</span>
                            <span class="badge bg-primary">@Model.Count()</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Pending:</span>
                            <span class="badge bg-warning">@Model.Count(r => r.Status == "Pending")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Approved:</span>
                            <span class="badge bg-success">@Model.Count(r => r.Status == "Approved")</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Active:</span>
                            <span class="badge bg-info">@Model.Count(r => r.Status == "Approved" && r.EndDate >= DateTime.Today)</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-9">
                <div class="card">
                    <div class="card-body">
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-outline-primary filter-btn" data-status="all">
                                All <span class="badge bg-primary">@Model.Count()</span>
                            </button>
                            <button type="button" class="btn btn-outline-warning filter-btn" data-status="Pending">
                                Pending <span class="badge bg-warning">@Model.Count(r => r.Status == "Pending")</span>
                            </button>
                            <button type="button" class="btn btn-outline-success filter-btn" data-status="Approved">
                                Approved <span class="badge bg-success">@Model.Count(r => r.Status == "Approved")</span>
                            </button>
                            <button type="button" class="btn btn-outline-danger filter-btn" data-status="Rejected">
                                Rejected <span class="badge bg-danger">@Model.Count(r => r.Status == "Rejected")</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover" id="reservationsTable">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Locker</th>
                        <th>Purpose</th>
                        <th>Period</th>
                        <th>Days Left</th>
                        <th>Status</th>
                        <th>Requested</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderByDescending(r => r.RequestDate))
                    {
                        var daysLeft = (item.EndDate - DateTime.Today).Days;
                        <tr class="reservation-row" data-status="@item.Status.ToLower()">
                            <td>@item.Id</td>
                            <td>
                                <strong>@item.LockerNumber</strong><br>
                                <small class="text-muted">ID: @item.UserId</small>
                            </td>
                            <td>
                                @{
                                    var purposePreview = item.Purpose.Length > 50 ?
                                    item.Purpose.Substring(0, 50) + "..." : item.Purpose;
                                }
                                <span title="@item.Purpose">@purposePreview</span>
                            </td>
                            <td>
                                @item.StartDate.ToString("MMM dd, yyyy")<br>
                                <small class="text-muted">to</small><br>
                                @item.EndDate.ToString("MMM dd, yyyy")
                            </td>
                            <td>
                                @if (item.Status == "Approved" && item.EndDate >= DateTime.Today)
                                {
                                    if (daysLeft <= 7)
                                    {
                                        <span class="badge bg-warning">
                                            <i class="bi bi-clock"></i> @daysLeft days
                                        </span>
                                    }
                                    else if (daysLeft <= 0)
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-exclamation-triangle"></i> Expired
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> @daysLeft days
                                        </span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                <span class="badge @GetStatusBadgeClass(item.Status) @GetStatusTextClass(item.Status)">
                                    <i class="bi @GetStatusIcon(item.Status)"></i> @item.Status
                                </span>
                            </td>
                            <td>
                                @item.RequestDate.ToString("MMM dd, yyyy")<br>
                                <small class="text-muted">@item.RequestDate.ToString("hh:mm tt")</small>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id"
                                       class="btn btn-info btn-sm" title="View Details">
                                        <i class="bi bi-eye"></i> Show
                                    </a>
                                    @if (item.Status == "Pending" || item.Status == "Rejected")
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-warning btn-sm" title="Edit Reservation">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                    }
                                    @if (item.Status == "Pending")
                                    {
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-danger btn-sm" title="Cancel Reservation">
                                            <i class="bi bi-trash"></i> Cancel
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Summary -->
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title"><i class="bi bi-info-circle"></i> Reservation Information</h6>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="d-flex align-items-center mb-2">
                                    <span class="badge bg-success me-2"><i class="bi bi-check-circle"></i></span>
                                    <span>Active Reservations: @Model.Count(r => r.Status == "Approved" && r.EndDate >= DateTime.Today)</span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="d-flex align-items-center mb-2">
                                    <span class="badge bg-warning me-2"><i class="bi bi-clock"></i></span>
                                    <span>Pending Approval: @Model.Count(r => r.Status == "Pending")</span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="d-flex align-items-center mb-2">
                                    <span class="badge bg-secondary me-2"><i class="bi bi-x-circle"></i></span>
                                    <span>Expired/Cancelled: @Model.Count(r => r.Status == "Cancelled" || r.Status == "Expired" || (r.Status == "Approved" && r.EndDate < DateTime.Today))</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Filter functionality
            const filterButtons = document.querySelectorAll('.filter-btn');
            const reservationRows = document.querySelectorAll('.reservation-row');

            filterButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const status = this.getAttribute('data-status');

                    // Update active button
                    filterButtons.forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');

                    // Filter rows
                    reservationRows.forEach(row => {
                        if (status === 'all' || row.getAttribute('data-status') === status.toLowerCase()) {
                            row.style.display = '';
                        } else {
                            row.style.display = 'none';
                        }
                    });
                });
            });

            // Set active filter based on URL parameter
            const urlParams = new URLSearchParams(window.location.search);
            const statusParam = urlParams.get('status');
            if (statusParam) {
                const activeButton = document.querySelector(`.filter-btn[data-status="${statusParam}"]`);
                if (activeButton) {
                    activeButton.click();
                }
            } else {
                // Default to showing all
                document.querySelector('.filter-btn[data-status="all"]').classList.add('active');
            }

            // Auto-dismiss alerts after 5 seconds
            setTimeout(() => {
                const alerts = document.querySelectorAll('.alert');
                alerts.forEach(alert => {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                });
            }, 5000);

            // Add confirmation for delete/cancel
            const deleteButtons = document.querySelectorAll('a[title="Cancel Reservation"]');
            deleteButtons.forEach(button => {
                button.addEventListener('click', function(e) {
                    if (!confirm('Are you sure you want to cancel this reservation?')) {
                        e.preventDefault();
                    }
                });
            });
        });
    </script>
}

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Approved" => "bg-success",
            "Pending" => "bg-warning",
            "Rejected" => "bg-danger",
            "Cancelled" => "bg-secondary",
            "Expired" => "bg-dark",
            _ => "bg-info"
        };
    }

    public string GetStatusTextClass(string status)
    {
        return status switch
        {
            "Approved" => "text-white",
            "Pending" => "text-dark",
            "Rejected" => "text-white",
            "Cancelled" => "text-white",
            "Expired" => "text-white",
            _ => "text-white"
        };
    }

    public string GetStatusIcon(string status)
    {
        return status switch
        {
            "Approved" => "bi-check-circle",
            "Pending" => "bi-clock",
            "Rejected" => "bi-x-circle",
            "Cancelled" => "bi-slash-circle",
            "Expired" => "bi-exclamation-triangle",
            _ => "bi-info-circle"
        };
    }
}